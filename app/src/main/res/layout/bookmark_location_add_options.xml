                        android:layout_height="33dp"
                        android:layout_marginLeft="51dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="Montserrat"
                        android:text="@string/add_to_ipoh_trip_string"
                        android:textColor="@color/create_new_trip_color"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                    <RelativeLayout
                        android:id="@+id/add_toExistentTrip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp">

                        <View
                            android:id="@+id/optionsAddCircleBackgroundExistentTrip2"
                            android:layout_width="37dp"
                            android:layout_height="36dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/options_add_circle_background" />

                        <TextView
                            android:id="@+id/optionsAddPlusExistentTrip2"
                            android:layout_width="52dp"
                            android:layout_height="49dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="0dp"
                            android:fontFamily="Montserrat"
                            android:text="@string/optionsAddPlusString"
                            android:textColor="@color/white_color"
                            android:textSize="30sp" />

                    </RelativeLayout>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/starRatingImage"
                    android:layout_width="18dp"
                    android:layout_height="17dp"
