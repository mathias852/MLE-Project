                            <TextView
                                android:id="@+id/optionsAddPlus"
                                android:layout_width="52dp"
                                android:layout_height="49dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="0dp"
                                android:fontFamily="Montserrat"
                                android:text="@string/optionsAddPlusString"
                                android:textColor="@color/white_color"
                                android:textSize="30sp" />

                        </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/add_toExistingTrip1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="31dp"
                    android:layout_marginTop="587dp"
                    android:onClick="addToExistingTrip">

                    <TextView
                        android:id="@+id/add_to_penang_trip"
                        android:layout_width="235dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="51dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="Montserrat"
                        android:text="@string/add_to_penang_trip_string"
                        android:textColor="@color/create_new_trip_color"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                    <RelativeLayout
                        android:id="@+id/add_button_ek1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp">

