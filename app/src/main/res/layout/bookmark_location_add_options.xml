                            android:layout_width="37dp"
                            android:layout_height="36dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/options_add_circle_background" />

                        <TextView
                            android:id="@+id/optionsAddPlusExistentTrip1"
                            android:layout_width="52dp"
                            android:layout_height="49dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="0dp"
                            android:fontFamily="Montserrat"
                            android:text="@string/optionsAddPlusString"
                            android:textColor="@color/white_color"
                            android:textSize="30sp" />

                    </RelativeLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/add_to_new_trip_ek2"
