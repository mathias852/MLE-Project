                            <TextView
                                android:id="@+id/InformationPrice_range"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="Montserrat"
                                android:text="@string/bookmarkLocationInformationPrice_range"
                                android:textColor="@color/penang_hill_color"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/information_transport_options"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="Montserrat"
                                android:text="@string/bookmarkLocationInformationTransport_options"
                                android:textColor="@color/penang_hill_color"
                                android:textSize="15sp" />
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
